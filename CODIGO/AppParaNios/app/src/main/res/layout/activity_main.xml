<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activitySeleccionarLetra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".JuegoActivity"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageObj"
        android:layout_width="356dp"
        android:layout_height="232dp"
        app:srcCompat="@drawable/i0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="616dp">

        <Button
            android:id="@+id/btnA"
            android:layout_width="148dp"
            android:layout_height="107dp"
            android:layout_marginLeft="10dp"
            android:onClick="seleccionarVocal"
            android:text="A" />

        <Button
            android:id="@+id/btnE"
            android:layout_width="148dp"
            android:layout_height="107dp"
            android:layout_alignBottom="@+id/btnA"
            android:layout_marginLeft="170dp"
            android:onClick="seleccionarVocal"
            android:text="E" />

        <Button
            android:id="@+id/btnI"
            android:layout_width="148dp"
            android:layout_height="107dp"
            android:layout_alignBottom="@+id/btnA"
            android:layout_marginBottom="-120dp"
            android:layout_marginLeft="10dp"
            android:onClick="seleccionarVocal"
            android:text="I" />

        <Button
            android:id="@+id/btnO"
            android:layout_width="148dp"
            android:layout_height="107dp"
            android:layout_alignBottom="@+id/btnI"
            android:layout_marginLeft="170dp"
            android:onClick="seleccionarVocal"
            android:text="O" />

        <Button
            android:id="@+id/btnU"
            android:layout_width="148dp"
            android:layout_height="107dp"
            android:layout_alignBottom="@+id/btnI"
            android:layout_alignParentTop="@+id/btnE"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="-120dp"
            android:onClick="seleccionarVocal"
            android:text="U" />


    </RelativeLayout>

</LinearLayout>
